{
  "compileOnSave": false,
  "compilerOptions": {
    "types": ["node", "@types/node", "vitest/globals", "vitest/importMeta"],
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedSideEffectImports": true, // From frontend config

    /* Compatibility & Resolution (Mostly shared) */
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,

    /* Module Detection */
    "moduleDetection": "force"
  }
}
